<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <!--主布局-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/content_main"/>
</LinearLayout>
    <!--侧滑菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_gravity="start"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:id="@+id/favourite"
            android:background="@drawable/roundbutton_red_bg"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:id="@+id/zi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="我的最爱"
                android:layout_toEndOf="@+id/zi"
                android:paddingStart="30dp"
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:id="@+id/cleancache"
            android:background="@drawable/roundbutton_red_bg"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete_sweep_black_24dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/zi1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="清理缓存"
                android:layout_toEndOf="@+id/zi1"
                android:paddingStart="30dp"
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/cache"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:textColor="#cccccc"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/aboutus"
            android:clickable="true"
            android:background="@drawable/roundbutton_red_bg"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/zi2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="关于Delicacy"
                android:layout_toEndOf="@+id/zi2"
                android:paddingStart="30dp"
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/feedback"
            android:clickable="true"
            android:background="@drawable/roundbutton_red_bg"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_feedback_black_24dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/zi3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="意见反馈"
                android:layout_toEndOf="@+id/zi3"
                android:paddingStart="30dp"
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>